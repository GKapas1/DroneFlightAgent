<?xml version="1.0"?>
<sdf version="1.9">
  <model name="simple_drone">
    <!-- Base link -->
    <link name="base_link">
      <gravity>true</gravity>
      <inertial>
        <mass>1.5</mass>
        <inertia>
          <ixx>0.034</ixx>
          <iyy>0.034</iyy>
          <izz>0.060</izz>
        </inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <box>
            <size>0.5 0.5 0.2</size>
          </box>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <box>
            <size>0.5 0.5 0.2</size>
          </box>
        </geometry>
        <material>
          <ambient>0.8 0.8 0.8 1</ambient>
        </material>
      </visual>
    </link>

    <!-- IMU link with Fortress-style sensor -->
    <link name="imu_link">
      <inertial>
        <mass>0.01</mass>
        <inertia>
          <ixx>1e-6</ixx>
          <iyy>1e-6</iyy>
          <izz>1e-6</izz>
        </inertia>
      </inertial>

      <sensor name="imu_sensor" type="imu">
        <always_on>true</always_on>
        <update_rate>100</update_rate>
        <topic>/drone/imu_data</topic>
      </sensor>
    </link>

    <joint name="imu_joint" type="fixed">
      <parent>base_link</parent>
      <child>imu_link</child>
    </joint>
  </model>
</sdf>
