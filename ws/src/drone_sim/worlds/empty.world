<?xml version="1.0"?>
<sdf version="1.8">
  <world name="empty">

    <!-- Gravity, physics, etc. -->
    <gravity>0 0 -9.81</gravity>
    <magnetic_field>6e-6 2.3e-5 -4.2e-5</magnetic_field>
    <atmosphere type="adiabatic"/>
    <physics name="ode" type="ode"/>


	<!-- Required for all sensors (IMU, lidar, cameras, etc.) to produce data -->
	<plugin filename="gz-sim-sensors-system" name="gz::sim::systems::Sensors">
	  <render_engine>ogre2</render_engine>
	</plugin>
	<!-- Required so <sensor type="imu"> actually publishes -->
<plugin filename="gz-sim-imu-system" name="gz::sim::systems::Imu"/>

<!-- Required so <sensor type="air_pressure"> publishes -->
<plugin filename="gz-sim-air-pressure-system" name="gz::sim::systems::AirPressure"/>

  <!-- Physics system -->
  <plugin filename="gz-sim-physics-system" name="gz::sim::systems::Physics">
    <engine>
      <filename>gz-physics-dartsim-plugin</filename>
    </engine>
  </plugin>


	<!-- These are also commonly included in minimal worlds -->
	<plugin filename="gz-sim-physics-system" name="gz::sim::systems::Physics"/>
	<plugin filename="gz-sim-scene-broadcaster-system" name="gz::sim::systems::SceneBroadcaster"/>
	<plugin filename="gz-sim-user-commands-system" name="gz::sim::systems::UserCommands"/>


    <!-- Optional: lights for visualization -->
    <light name="sun" type="directional">
      <cast_shadows>true</cast_shadows>
      <pose>0 0 10 0 0 0</pose>
      <diffuse>1 1 1 1</diffuse>
      <specular>0.1 0.1 0.1 1</specular>
      <attenuation>
        <range>1000</range>
        <constant>0.9</constant>
        <linear>0.01</linear>
        <quadratic>0.001</quadratic>
      </attenuation>
      <direction>-0.5 0.1 -1.0</direction>
    </light>

  </world>
</sdf>

